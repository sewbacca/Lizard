{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean all",
			"command": "make clean",
			"type": "shell",
			"group": "build",
			"problemMatcher": [
				"$gcc",
			]
		},
		{
			"label": "Compile Lizard (Release)",
			"command": "CONFIG=release make exec -j",
			"type": "shell",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Test",
			"dependsOn": "Compile Tests",
			"command": "${command:test-explorer.run-all}",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Compile Lizard (Debug)",
			"command": "CONFIG=debug make exec  -j",
			"type": "shell",
			"problemMatcher": [
				"$gcc",
				{
					"owner": "/usr/bin/ld",
					"source": "Linker",
					"fileLocation": "absolute",
					"pattern": [
						{
							"regexp": "/usr/bin/ld"
						},
						{
							"regexp": "([^:]+):(\\d+): ([^:]+)",
							"file": 1,
							"line": 2,
							"message": 3
						}
					]
				}
			],
			"presentation": {
				"reveal": "always",
				"revealProblems": "onProblem",
				"echo": true,
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"group": "build"
		},
		{
			"label": "Compile Tests",
			"command": "CONFIG=debug make tests -j",
			"type": "shell",
			"problemMatcher": [
				{
					"base": "$gcc",
					"fileLocation": "autoDetect"
				},
				{
					"owner": "/usr/bin/ld",
					"source": "Linker",
					"fileLocation": "absolute",
					"pattern": [
						{
							"regexp": "/usr/bin/ld"
						},
						{
							"regexp": "([^:]+):(\\d+): ([^:]+)",
							"file": 1,
							"line": 2,
							"message": 3
						}
					]
				},
				{
					"owner": "test.exe",
					"source": "Test",
					"fileLocation": [
						"relative",
						"${workspaceFolder}"
					],
					"pattern": [
						{
							"regexp": "(.+)\\((\\d+)\\): error: in (.+)",
							"file": 1,
							"line": 2,
							"column": 0,
							"message": 3
						}
					]
				}
			],
			"presentation": {
				"reveal": "always",
				"revealProblems": "onProblem",
				"clear": true
			},
			"group": "build"
		}
	]
}